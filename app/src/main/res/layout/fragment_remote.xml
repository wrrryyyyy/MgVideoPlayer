<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:id="@+id/dl_remote_left_menu">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/tv_remote"
                    android:background="@color/colorThemeYellow"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="horizontal">
                    <android.support.v4.widget.Space
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/cb_remote"
                        android:text="@string/gyro_mode"/>
                    <android.support.v4.widget.Space
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:id="@+id/btn_remote_show_more"
                        android:text="…"
                        android:background="@color/colorWhite"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:text=""
                android:layout_gravity="top"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:text=""
                    android:layout_gravity="top"/>
                <Button
                    android:layout_gravity="top"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="↑"
                    android:id="@+id/remote_up_btn"/>
                <TextView
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:text=""
                    android:layout_gravity="top"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:text=""
                    android:layout_gravity="top"/>
                <Button
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="←"
                    android:id="@+id/remote_left_btn"/>
                <TextView
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text=""
                    android:layout_gravity="top"/>
                <Button
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="⚪"
                    android:id="@+id/remote_center_btn"/>
                <TextView
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text=""
                    android:layout_gravity="top"/>
                <Button
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="→"
                    android:id="@+id/remote_right_btn"/>

                <TextView
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:text=""
                    android:layout_gravity="top"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:text=""
                    android:layout_gravity="top"/>
                <Button
                    android:layout_gravity="top"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="↓"
                    android:id="@+id/remote_down_btn"/>

                <TextView
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:text=""
                    android:layout_gravity="top"/>
            </LinearLayout>
            <TextView
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:text=""
                android:layout_gravity="top"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:text=""
                    android:layout_gravity="top"/>
                <Button
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="▲"
                    android:id="@+id/remote_A_btn"/>

                <TextView
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:text=""
                    android:layout_gravity="top"/>
                <Button
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="×"
                    android:id="@+id/remote_B_btn"/>

                <TextView
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:text=""
                    android:layout_gravity="top"/>
            </LinearLayout>
            <TextView
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:text=""
                android:layout_gravity="top"/>

        </LinearLayout>

        <android.support.design.widget.NavigationView
            android:layout_width="300dp"
            android:layout_gravity="left"
            app:headerLayout="@layout/head_layout"
            app:menu="@menu/device_menu"
            android:layout_height="match_parent">

        </android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>


</FrameLayout>
